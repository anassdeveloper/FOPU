-   const isArabic = txt => pattern.test(txt)


main.global_posts 
    each post in posts 
        .card_post
            picture.card_post--photo 
               img.card_post--img(src= post.photo alt='POST PHOTO') 
            .card_post--content 
                .card_box 
                    img.card_box--img(src= post.userPhoto)
                .card_box.card_box--text 
                    h3.card_box--name= post.username
                    span.card_post--time depuis 6min
                    if(isArabic(post.title))
                        p.card_post--parag--arabic= post.title
                    else 
                        p.card_post--parag= post.title


    